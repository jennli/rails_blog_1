
<div class="post-container">
  <h1 class="title"><img class="title-image" src="http://lindawagner.net/blog/wp-content/uploads/2011/05/heart-bullet-point.jpg"/> <%= @post.title %>  </h1><strong> <br>#<%= @category.title %></strong>
  <p class="post-content"><%= raw@post.body %><br>
    <% if @post.updated_at > @post.created_at %>
    <p class="date"><%= "UPDATED AT:  #{@post.updated_at} " %></p>
    <% else %>
    <p class="date"><%="CREATED AT: #{@post.created_at}" %></p>
    <% end %> </p>

    <div>
      <p><%= link_to "Delete", @post, method: :delete, data: {confirm: "Are you sure?"} %> |
        <%= link_to "Edit", edit_post_path %> | <%= link_to "Comment", "#comment-textarea" %></p>
      </div>

    </div>
    <!-- <hr /> -->

    <div class="comments-container">

      <div class="comments">
        <p><strong>THIS POST HAS <%= @comments.size %> COMMENTS:</strong></p>

        <ul>
          <% @comments.each do |x| %>
          <li class="comments"><%= x[:body] %> <br> <span><%= x[:created_at] %> <%= link_to "Delete", comment_path(x), method: :delete, data: {confirm: "Are you sure?"}%>|<%= link_to "Edit", edit_comment_path(x) %></span></li>

          <% end %>

        </ul>

      </div>

      <div class="comments">
        <%= form_for Comment.new do |f|  %>
        <div>
          <%= f.label :body, value="Comment" %><br/>
          <%= f.text_area :body , class: "comment-textarea", id: "comment-textarea", cols: "65", rows: "5" %>
          <%= f.hidden_field :post_id, value: @post.id %>
        </div>

        <div>
          <%= f.submit %>
        </div>

        <% end %>

      </div>

    </div>
