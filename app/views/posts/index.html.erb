<div class="post-container">

  <div class="search_bar">
    <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "keyword" %>
    <%= submit_tag "Search", :name => nil , class: "button" %>
    <% end %>
  </div>

  <!-- <h1 class="title">WELCOME TO JENN LI'S BLOG</h1> -->

  <h1 class="header">All BLOG POSTS</h2>
    <% @posts.each do |p|  %>
    <p class="post-content"><%= image_tag "flame.gif", class: "title-image" %> <%= link_to "#{p.title} ...", post_path(p) %>  <em class="footer">(<%= p.created_at %>)</em> </p>

    <% end %>

    <div id="infinite-scrolling">
      <%= will_paginate %>
    </div>
  </div>
