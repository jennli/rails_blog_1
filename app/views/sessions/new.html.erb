<div class="auth-container">

  <h1 class="title">User Login</h1>

  <div>
    <%= form_tag sessions_path do  %>
    <div>
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </div>
    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <br />
    <div>
      <%= submit_tag :login %> <%=link_to "New user?", new_user_path  %>
    </div>
    <% end %>
  </div>
</div>
